<span class='spanTemplate'>
	<span class='title' title='{{i18n.date}}'>
		{{DateTime data.date}}
	</span>
	<span class='subtitle'>
		{{#if data.observation.animal}}
		{{TextURL
			(concat '/catalog/animal-info/' data.observation.animal.id)
			data.observation.animal.name
			i18n.checkAnimalAtCatalog}}
		{{else}}
			{{data.observation.note}}
		{{/if}}
		{{#if data.observation.taxonomy}}
		<span class='cursive'>
			- {{TextURL
				(concat 'https://redpromar.org/species/' data.observation.taxonomy.id)
				data.observation.taxonomy.scientificName
				i18n.checkSpeciesAtCatalog}}
		</span>
		{{/if}}
		{{#if data.observation.device}}
		<span title='{{i18n.device}}'>
			- {{data.observation.device.name}} ({{data.observation.device.model}})
		</span>
		{{/if}}
</span>
